{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscriptionId": { "type": "string" },
    "resourceGroupName": { "type": "string" },
    "location": { "type": "string" },
    "webAppName": { "type": "string" },
    "hostingPlanName": { "type": "string" },
    "serverFarmResourceGroup": { "type": "string" },
    "alwaysOn": { "type": "bool" },
    "ftpsState": { "type": "string" },
    "keyVaultName": { "type": "string" },
    "keyVaultSku": { "type": "string" },
    "tenant": { "type": "string" },
    "enableRbacAuthorization": { "type": "bool" },
    "accessPolicies": { "type": "array" },
    "enableSoftDelete": { "type": "bool" },
    "softDeleteRetentionInDays": { "type": "int" },
    "publicNetworkAccess": { "type": "string" },
    "secretName": { "type": "string" },
    "secretValue": { "type": "securestring" }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('location')]",
      "kind": "app",
      "sku": {
        "tier": "PremiumV2",
        "name": "P1v2"
      },
      "properties": {
        "name": "[parameters('hostingPlanName')]",
        "numberOfWorkers": 1,
        "reserved": false,
        "zoneRedundant": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "kind": "app",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId(parameters('serverFarmResourceGroup'),'Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "alwaysOn": "[parameters('alwaysOn')]",
          "ftpsState": "[parameters('ftpsState')]",
          "appSettings": [
            {
              "name": "KeyVaultUri",
              "value": "[concat('https://', parameters('keyVaultName'), '.vault.azure.net/')]"
            },
            {
              "name": "SECRET_NAME",
              "value": "[parameters('secretName')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('webAppName'), '/staging')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId(parameters('serverFarmResourceGroup'),'Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2024-12-01-preview",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
      ],
      "properties": {
        "tenantId": "[parameters('tenant')]",
        "sku": {
          "family": "A",
          "name": "[parameters('keyVaultSku')]"
        },
        "accessPolicies": "[parameters('accessPolicies')]",
        "enabledForDeployment": true,
        "enabledForTemplateDeployment": true,
        "enabledForDiskEncryption": false,
        "enableSoftDelete": "[parameters('enableSoftDelete')]",
        "softDeleteRetentionInDays": "[parameters('softDeleteRetentionInDays')]",
        "enableRbacAuthorization": "[parameters('enableRbacAuthorization')]",
        "networkAcls": {
          "bypass": "AzureServices",
          "defaultAction": "Allow",
          "ipRules": [],
          "virtualNetworkRules": []
        },
        "publicNetworkAccess": "[parameters('publicNetworkAccess')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2024-12-01-preview",
      "name": "[concat(parameters('keyVaultName'), '/', parameters('secretName'))]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
      ],
      "properties": {
        "value": "[parameters('secretValue')]",
        "attributes": {
          "enabled": true
        }
      }
    }
  ],
  "outputs": {
    "webAppName": {
      "type": "string",
      "value": "[parameters('webAppName')]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('webAppName'), '.azurewebsites.net')]"
    },
    "keyVaultUri": {
      "type": "string",
      "value": "[concat('https://', parameters('keyVaultName'), '.vault.azure.net/')]"
    }
  }
}
